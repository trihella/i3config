! =========================================================================== !
!       Xterm config                                                          !
! =========================================================================== !

! Global parameters
xterm*faceName: Ubuntu Mono
xterm*faceSize: 12
xterm*termName: xterm-256color
xterm*savelines: 16384
xterm*loginShell: true
xterm*scrollBar: false

! Solarized colorscheme
xterm*background: S_base03
xterm*foreground: S_base0
xterm*fading: 40
xterm*fadeColor: S_base03
xterm*cursorColor: S_base1
xterm*pointerColorBackground: S_base01
xterm*pointerColorForeground: S_base1
xterm*color0: S_base02
xterm*color1: S_red
xterm*color2: S_green
xterm*color3: S_yellow
xterm*color4: S_blue
xterm*color5: S_magenta
xterm*color6: S_cyan
xterm*color7: S_base2
xterm*color8: S_base03
xterm*color9: S_orange
xterm*color10: S_base01
xterm*color11: S_base00
xterm*color12: S_base0
xterm*color13: S_violet
xterm*color14: S_base1
xterm*color15: S_base3

! Fixing some chars
xterm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:38
xterm*utf8: 1
!xterm.*.backarrowKey: false

! =========================================================================== !
!       Urxvt config                                                          !
! =========================================================================== !

URxvt.depth: 32
URxvt.geometry: 140x40
URxvt.transparent: false
URxvt.fading: 0
URxvt.loginShell: true
URxvt.saveLines: 10000
URxvt.internalBorder: 3
URxvt.lineSpace: 0
! URxvt.termName: xterm-256color

! Scrollbar
URxvt.scrollStyle: rxvt
URxvt.scrollBar: false

! Cursor
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.pointerBlank: true

! Perl extensions
URxvt.perl-ext-common: default,matcher,font-size
URxvt.matcher.button: 1
URxvt.urlLauncher: firefox
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

! Font config
URxvt.allow_bold: true
URxvt*font:                 xft:Ubuntu Mono:Regular:size=12
URxvt*boldFont:             xft:Ubuntu Mono:bold:size=12

!URxvt.intensityStyles: false

URxvt*background: #1D1F21
URxvt*foreground: #C5C8C6

! Black
URxvt*color0: #2e3436
URxvt*color8: #555753
! Red
URxvt*color1: #cc0000
URxvt*color9: #ef2929
! Green
URxvt*color2: #4e9a06
URxvt*color10: #8ae234
! Yellow
URxvt*color3: #c4a000
URxvt*color11: #fce94f
! Blue
URxvt*color4: #00AFFF
URxvt*color12: #729fcf
! Purple
URxvt*color5: #75507b
URxvt*color13: #ad7fa8
! Cyan
URxvt*color6: #0b939b
URxvt*color14: #00f5e9
! White
URxvt*color15: #eeeeec
URxvt*color7: #d3d7cf


